generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Location {
  id String @id @default(cuid())
  item Int 
  name String @unique
  typeNumber Int
  typeName String
  subdistrict String?
  district String?
  province String?
  region String?
  latitude Float
  longitude Float
  importance String?
  details String?
  limitBooking Int @default(10)

  bookings Booking[]
  
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Booking {
  id String @id @default(cuid())
  numOfPeople Int
  bookingDate DateTime
  totalPrice Float?
  remarks String?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  locationId String 
  location Location @relation(fields: [locationId], references: [id])

  userId String
  user User @relation(fields: [userId], references: [id])

  @@index([locationId])
  @@index([userId])
  @@index([bookingDate])

}

model User {
  id String @id @default(cuid())
  firstName String
  lastName String
  email String @unique
  password String
  role Role @default(USER)

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  bookings Booking[]
}

enum Role {
  ADMIN
  USER
}